@model List<AlugaFilme.Web.Models.ClientesModel>
@{
    Layout = "~/Views/Shared/_Cadastro.cshtml";
    ViewBag.Title = "Clientes";
    ViewBag.Lista = Model;
}

@section Styles{
    <link href="~/Content/bootstrap-select.css" rel="stylesheet" />
    <link href="~/Content/Cadastro/Clientes.css" rel="stylesheet" />
    <style>
        .dialogo > .modal-dialog {
            width: 700px !important;
        }
    </style>
}

@section TituloGrid{
    <th></th>
    <th><span class="coluna-ordenacao" data-campo="nome">Nome</span></th>
    <th>Telefone</th>
    <th>Ativo</th>
    <th>Ação</th>
}

@section LinhaGrid{
    @{
        var linha = 0;
        foreach (var item in Model)
        {
            linha++;
            if (linha <= ViewBag.QtdMax)
            {
                var ativo = (item.Ativo ? "SIM" : "NÃO");
                <tr data-id="@item.Id">
                    <td style="text-align:center;vertical-align:middle">
                        <input type="checkbox" data-id="@item.Id">
                    </td>
                    <td>@item.Nome</td>
                    <td>@item.Telefone</td>
                    <td>@ativo</td>
                    <td>
                        <a class="btn btn-primary btn-alterar" role="button"><i class="glyphicon glyphicon-pencil"></i> Alterar</a>
                        <a class="btn btn-danger btn-excluir" role="button"><i class="glyphicon glyphicon-trash"></i> Excluir</a>
                    </td>
                </tr>
            }
            else
            {
                linha = 0;
                break;

            }
        }
    }
}

@section CamposCadastro{
    <div class="row">
        <div class="col-md-12">
            @Html.Label("txt_nome", "Nome", new { @class = "control-label" })
            @Html.TextBox("txt_nome", null, new { @class = "form-control" })
        </div>
    </div>
    <div class="row" style="margin-top:5px">
        <div class="col-md-6">
            @Html.Label("txt_documento", "CPF", new { @class = "control-label" })
            @Html.TextBox("txt_documento", null, new { @class = "form-control" })
        </div>
        <div class="col-md-6">
            @Html.Label("txt_telefone", "Telefone", new { @class = "control-label" })
            @Html.TextBox("txt_telefone", null, new { @class = "form-control" })
        </div>
    </div>
    <div class="row" style="margin-top: 10px">
        <div class="col-md-12">
            <div class="panel panel-info">
                <div class="panel-heading">Endereço</div>

                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-9">
                            @Html.Label("txt_logradouro", "Logradouro", new { @class = "control-label" })
                            @Html.TextBox("txt_logradouro", null, new { @class = "form-control" })
                        </div>
                        <div class="col-md-3">
                            @Html.Label("txt_numero", "Número", new { @class = "control-label" })
                            @Html.TextBox("txt_numero", null, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-9">
                            @Html.Label("txt_complemento", "Complemento", new { @class = "control-label" })
                            @Html.TextBox("txt_complemento", null, new { @class = "form-control" })
                        </div>
                        <div class="col-md-3">
                            @Html.Label("txt_cep", "CEP", new { @class = "control-label" })
                            @Html.TextBox("txt_cep", null, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            @Html.Label("txt_pais", "País", new { @class = "control-label" })
                            @Html.TextBox("txt_pais", null, new { @class = "form-control" })
                        </div>

                        <div class="col-md-4">
                            @Html.Label("txt_estado", "Estado", new { @class = "control-label" })
                            @Html.TextBox("txt_estado", null, new { @class = "form-control" })
                        </div>

                        <div class="col-md-4">
                            @Html.Label("txt_cidade", "Cidade", new { @class = "control-label" })
                            @Html.TextBox("txt_cidade", null, new { @class = "form-control" })
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-check">
                @Html.CheckBox("cbx_ativo", new { @class = "form-check-input" })
                @Html.Label("cbx_ativo", "Ativo", new { @class = "form-check-label" })
            </div>
        </div>
    </div>

}

@section Scripts{
    <script src="~/Scripts/bootstrap-select.js"></script>
    <script src="~/Scripts/jquery.mask.min.js"></script>
    <script>
        var tituloPagina = '@ViewBag.Title';

        var urlAlteracao = '@Url.Action("RecuperarClientes", "CadClientes")';
        var urlExclusao = '@Url.Action("ExcluirClientes", "CadClientes")';
        var urlExclusaoVarios = '@Url.Action("ExcluirVariosClientes", "CadClientes")';
        var urlConfirmacao = '@Url.Action("SalvarClientes", "CadClientes")';

        var urlChangePage = '@Url.Action("ClientesPagina", "CadClientes")';
        var urlFiltro = '@Url.Action("ClientesPagina", "CadClientes")';
        var urlPaginaNumero = '@Url.Action("ClientesPagina", "CadClientes")';
        var urlOrdenacao = '@Url.Action("ClientesPagina", "CadClientes")';

    </script>
    <script src="~/Scripts/Cadastro/Clientes.js"></script>
}
